@page "/"  
@using System.Resources  
@using Microsoft.Extensions.Localization

@inject IStringLocalizer<FutureFinans.Resources.IndexResource> L




<div class="home-container">  
    <section class="hero">  
        <h1>@L["Welcome"]</h1>
        <p>Your trusted partner in personal and business finance.</p>  
        <a href="/loan" class="btn-primary">Apply for a Loan</a>  
    </section>  

    <section class="features">  
        <div class="feature-card">  
            <h3>💳 Easy Loans</h3>  
            <p>Quick approval process tailored to your needs.</p>  
        </div>  
        <div class="feature-card">  
            <h3>🔒 Secure Banking</h3>  
            <p>We prioritize your safety with advanced encryption.</p>  
        </div>  
        <div class="feature-card">  
            <h3>📈 Investment Plans</h3>  
            <p>Grow your wealth with smart financial strategies.</p>  
        </div>  
    </section>  
</div>  

<style>  
    .home-container {  
        text-align: center;  
        padding: 2rem;  
        font-family: Arial, sans-serif;  
    }  

    .hero {  
        background: linear-gradient(135deg, #1e3c72, #2a5298);  
        color: white;  
        padding: 4rem 2rem;  
        border-radius: 12px;  
        margin-bottom: 2rem;  
    }  

    .hero h1 {  
        font-size: 2.5rem;  
        margin-bottom: 1rem;  
    }  

    .btn-primary {  
        background-color: #ffcc00;  
        color: black;  
        padding: 0.8rem 1.5rem;  
        border-radius: 8px;  
        text-decoration: none;  
        font-weight: bold;  
        transition: background 0.3s ease;  
    }  

    .btn-primary:hover {  
        background-color: #e6b800;  
    }  

    .features {  
        display: flex;  
        justify-content: center;  
        gap: 1.5rem;  
        flex-wrap: wrap;  
    }  

    .feature-card {  
        background: #f9f9f9;  
        padding: 1.5rem;  
        border-radius: 10px;  
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);  
        width: 250px;  
    }  

    .feature-card h3 {  
        margin-bottom: 0.5rem;  
    }  
</style>
